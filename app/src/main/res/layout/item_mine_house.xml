<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_mine_house"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_owner"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="业主"
        android:textColor="@color/base_black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_community_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@id/tv_owner"
        android:text="凯宾斯基"
        android:textColor="@color/base_black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_house_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_community_name"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/tv_owner"
        android:text="1房"
        android:textColor="@color/gray_text"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_people_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:drawableRight="@drawable/ic_arrow_right_30px"
        android:text="2人"
        android:textColor="@color/gray_text"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/base_line" />


</RelativeLayout>