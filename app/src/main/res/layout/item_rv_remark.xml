<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_head_item_rv_remark"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="5dp" />

    <TextView
        android:id="@+id/tv_name_item_rv_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iv_head_item_rv_remark"
        android:text="小林子"
        android:textColor="@color/base_black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_mark_item_rv_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_head_item_rv_remark"
        android:layout_toEndOf="@id/iv_head_item_rv_remark"
        android:text="打分"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_content_item_rv_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_head_item_rv_remark"
        android:layout_toEndOf="@id/iv_head_item_rv_remark"
        android:text="送水到家就是方便"
        android:textColor="@color/base_black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_comment_count_item_rv_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/tv_content_item_rv_remark"
        android:drawableLeft="@drawable/ic_comment_60px"
        android:drawablePadding="3dp"
        android:paddingTop="10dp"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_time_item_rv_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/ll_comment_item_rv_remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_comment_count_item_rv_remark"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/iv_head_item_rv_remark"
        android:background="@color/gray_comment_bg"
        android:orientation="vertical"
        android:padding="5dp" />

</RelativeLayout>