<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="18dp"
    android:layout_marginStart="18dp"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="4dp"
    app:cardPreventCornerOverlap="false"
    app:contentPadding="7dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_photo_item_rv_services"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_marginEnd="10dp" />

        <TextView
            android:id="@+id/tv_title_item_rv_services"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_photo_item_rv_services"
            android:text="家政服务"
            android:textColor="@color/base_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_describe_item_rv_services"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title_item_rv_services"
            android:layout_toEndOf="@id/iv_photo_item_rv_services"
            android:text="您家里的一切，让我来搞定！"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_address_item_rv_services"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_photo_item_rv_services"
            android:layout_toEndOf="@id/iv_photo_item_rv_services"
            android:text="凯宾斯基"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_cost_item_rv_services"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:padding="5dp"
            android:text="77.0"
            android:textColor="@color/base_color"
            android:textSize="24sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>